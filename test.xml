<data>
    <table name="user">
        <field id="true">id</field>
        <field length="20">username</field>
        <field length="20" password="true">password</field>
        <field length="20" email="true">email</field>

        <queries>
            <query type="create"/>
            <query type="edit"/>
            <query type="delete"/>
            <query type="find">
                <find-by-field>username</find-by-field>
                <find-by-field>password</find-by-field>
            </query>
        </queries>
    </table>
</data>