<data>
    <table name="user">
        <field name="id" id="true"/>
        <field name="username" length="20"/>
        <field name="password" length="20" password="true"/>
        <field name="email" length="20" email="true"/>

        <queries>
            <query type="create"/>
            <query type="edit"/>
            <query type="delete"/>
            <query type="find">
                <find-by-field name="username"/>
                <find-by-field name="password"/>
            </query>
        </queries>
    </table>
</data>